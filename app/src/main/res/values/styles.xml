<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ebony_gray</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/ebony_gray</item>
        <item name="android:textColorPrimary">@color/normal_text_color</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textViewStyle">@style/NormalTextStyle</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="colorControlNormal">@color/ebony_gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:actionMenuTextAppearance">@style/NormalTextStyle</item>
        <item name="actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="popupMenuStyle">@style/AppPopupMenuStyle</item>
    </style>

    <style name="ColoredActionBarStyle" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textAppearance">@style/BoldTextStyle</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ColoredToolbarBarStyle" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAppearance">@style/RobotoBoldTextStyle</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="titleTextAppearance">@style/RobotoBoldTextStyle</item>
        <item name="titleTextColor">@color/normal_text_color</item>
    </style>

    <style name="MenuTextAppearance" parent="TextAppearance.AppCompat.Menu">
        <item name="fontFamily">@font/nunito_semi_bold</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:color">@color/normal_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textViewStyle">@style/NormalTextStyle</item>
<!--        <item name="android:windowBackground">@drawable/bg_splash</item>-->
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="LoaderDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="windowMinWidthMajor">0dp</item>
        <item name="windowMinWidthMinor">0dp</item>
        <item name="android:windowMinWidthMajor">0dp</item>
        <item name="android:windowMinWidthMinor">0dp</item>
    </style>

    <style name="NormalTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:color">@color/normal_text_color</item>
    </style>

    <style name="BoldTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="CalenderWeekText" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_light</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/second_black</item>
    </style>

    <style name="CalenderMonthText" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/second_black</item>
    </style>



    <style name="LightTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/nunito_light</item>
        <item name="android:fontFamily">@font/nunito_light</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:color">@color/normal_text_color</item>
    </style>

    <style name="ExtraLightTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_extra_light</item>
        <item name="android:fontFamily">@font/nunito_extra_light</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="RobotoNormalTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:color">@color/normal_text_color</item>
    </style>

    <style name="RobotoBoldTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>


    <style name="TextBottomMenu" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/_13sdp</item>
        <item name="android:paddingBottom">@dimen/_13sdp</item>
        <item name="android:drawablePadding">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_1sdp</item>
    </style>

    <style name="SemiBoldTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="SemiBoldTextStyle2" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_semi_bold</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="SemiBoldTextStyleToolBar" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_semi_bold</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="NavigationItemTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_semi_bold</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@color/mine_shaft</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">@dimen/_2sdp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/BoldTextStyle</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="TextButtonStyleWithoutBG" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:textAppearance">@style/NormalTextStyle</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:textAppearance">@style/SemiBoldTextStyle</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/_2sdp</item>
    </style>

    <style name="IconButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/SemiBoldTextStyle</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/_3sdp</item>
        <item name="elevation">0dp</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="OutlinedButtonStyleWithRegularFont" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:textAppearance">@style/NormalTextStyle</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="GrayOutlinedButtonStyleWithRegularFont" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:textAppearance">@style/NormalTextStyle</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="strokeColor">@color/loblolly</item>
    </style>

    <style name="AppPopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textAppearance">@style/MenuTextAppearance</item>
    </style>


    <style name="CommonDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ebony_gray</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/ebony_gray</item>
        <item name="android:textColorPrimary">@color/normal_text_color</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textViewStyle">@style/NormalTextStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="colorControlNormal">@color/ebony_gray</item>
        <item name="android:textAllCaps">false</item>
    </style>





</resources>
